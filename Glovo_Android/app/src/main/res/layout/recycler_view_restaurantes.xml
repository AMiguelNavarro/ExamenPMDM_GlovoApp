<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/glovoYellow"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listadoRestaurantes.vista.ListadoRestaurantes"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="end"
        android:background="@color/glovoGreen"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvFiltro"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:text="CATEGORÍA"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerFiltro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="13dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="653dp"
        android:padding="3dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVentas"
            android:layout_width="194dp"
            android:layout_height="match_parent"
            android:background="@color/glovoGreen"
            android:layout_marginRight="20dp"
            android:onClick="getTop10"
            android:text="Top 10 Ventas" />

        <Button
            android:id="@+id/btnPuntuacion"
            android:layout_width="204dp"
            android:layout_height="match_parent"
            android:background="@color/glovoGreen"
            android:onClick="getValoraciones"
            android:text="VER VALORACIONES" />

    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/glovoYellow"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginInicio.vista.LoginVista"
    android:id="@+id/layout_login_vista">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="269dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:background="@drawable/glovo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usuario"
        android:textColorHint="@color/black"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:hint="@string/text_input_layout_hint_usuario"
        app:endIconMode="clear_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usuario_et"
                android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contrasena"
        android:hint="@string/activity_login_et_texto_contrasena"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_width="294dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconMode="password_toggle" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contrasena_et"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btInicioSesion"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/glovoGreen"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="validarUsuario"
        android:text="@string/activity_login_vista_text_boton_inicio_sesion" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginInicio.vista.LoginVista">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="229dp"
        android:layout_height="226dp"
        android:layout_gravity="center"
        android:background="@drawable/logo_glovo"
        tools:srcCompat="@drawable/logo_glovo" />

    <EditText
        android:id="@+id/usuario"
        android:layout_marginTop="30dp"
        android:layout_width="294dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Usuario"
        android:ems="10"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/contrasena"
        android:hint="Contraseña"
        android:layout_marginTop="15dp"
        android:layout_width="294dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btInicioSesion"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:background="@color/glovoGreen"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="validarUsuario"
        android:text="Iniciar Sesión" />

</LinearLayout>
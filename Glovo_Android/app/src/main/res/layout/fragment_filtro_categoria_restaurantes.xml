<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_filtro_categoria">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_filtro_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/fragment_restaurantes_filtro_progressBar"
        android:layout_width="50dp"
        android:background="@color/black"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/fragment_restaurantes_filtro_linearLayout_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_restaurantes_filtro_tv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/fragment_restaurantes_filtro_button_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/boton_error_texto"/>

    </LinearLayout>

</RelativeLayout>